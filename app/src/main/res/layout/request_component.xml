<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/roomList"
        android:layout_width="354dp"
        android:layout_height="102dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/box_detail" />

    <TextView
        android:id="@+id/txt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marvel"
        app:layout_constraintBottom_toBottomOf="@+id/roomList"
        app:layout_constraintEnd_toEndOf="@+id/roomList"
        app:layout_constraintHorizontal_bias="0.037"
        app:layout_constraintStart_toStartOf="@+id/roomList"
        app:layout_constraintTop_toTopOf="@+id/roomList"
        app:layout_constraintVertical_bias="0.108" />


    <TextView
        android:id="@+id/txt_roomName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room 1001"
        app:layout_constraintBottom_toBottomOf="@+id/roomList"
        app:layout_constraintEnd_toEndOf="@+id/roomList"
        app:layout_constraintHorizontal_bias="0.037"
        app:layout_constraintStart_toStartOf="@+id/roomList"
        app:layout_constraintTop_toTopOf="@+id/roomList"
        app:layout_constraintVertical_bias="0.337" />

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2023-19-5"
        app:layout_constraintBottom_toBottomOf="@+id/roomList"
        app:layout_constraintEnd_toEndOf="@+id/roomList"
        app:layout_constraintHorizontal_bias="0.037"
        app:layout_constraintStart_toStartOf="@+id/roomList"
        app:layout_constraintTop_toTopOf="@+id/roomList"
        app:layout_constraintVertical_bias="0.566" />

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15:00 - 17:00"
        app:layout_constraintBottom_toBottomOf="@+id/roomList"
        app:layout_constraintEnd_toEndOf="@+id/roomList"
        app:layout_constraintHorizontal_bias="0.301"
        app:layout_constraintStart_toStartOf="@+id/roomList"
        app:layout_constraintTop_toTopOf="@+id/roomList"
        app:layout_constraintVertical_bias="0.566" />

    <TextView
        android:id="@+id/btn_bookDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See booking details"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/roomList"
        app:layout_constraintEnd_toEndOf="@+id/roomList"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="@+id/roomList"
        app:layout_constraintTop_toTopOf="@+id/roomList"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_acc"
        android:layout_width="63dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="84dp"
        android:text="A"
        app:layout_constraintEnd_toEndOf="@+id/roomList"
        app:layout_constraintHorizontal_bias="0.75"

        app:layout_constraintStart_toEndOf="@+id/txt_time"
        app:layout_constraintTop_toTopOf="@+id/roomList" />

    <Button
        android:id="@+id/btn_decl"
        android:layout_width="63dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:text="D"
        app:layout_constraintEnd_toEndOf="@+id/roomList"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toEndOf="@+id/btn_acc"
        app:layout_constraintTop_toTopOf="@+id/roomList" />

</androidx.constraintlayout.widget.ConstraintLayout>