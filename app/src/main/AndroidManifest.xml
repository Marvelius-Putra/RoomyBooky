        android:theme="@style/Theme.RoomyBooky"
        tools:targetApi="31">
        <activity
            android:name=".ui.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.WebActivity"
            android:exported="false" />
        <activity
            android:name=".ui.user.BookingFormActivity"
            android:exported="false" />
        <activity
            android:name=".ui.user.BookingConfirmActivity"
            android:exported="false" />
        <activity
            android:name=".ui.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.HomePage"
            android:exported="false" />
        <activity
            android:name=".ui.user.history.BookingDetails"
            android:exported="false" />
        <activity
            android:name=".ui.admin.AdminPage"
            android:exported="false" />
        <activity
            android:name=".ui.LoginActivity"
            android:exported="false">
